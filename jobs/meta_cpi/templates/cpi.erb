#!/bin/bash

BOSH_PACKAGES_DIR=${BOSH_PACKAGES_DIR:-/var/vcap/packages}
BOSH_JOBS_DIR=${BOSH_JOBS_DIR:-/var/vcap/jobs}


export BUNDLE_GEMFILE=$BOSH_PACKAGES_DIR/meta_cpi/Gemfile

bundle_cmd="$BOSH_PACKAGES_DIR/ruby_for_meta_cpi/bin/bundle"

export BUNDLE_CACHE_PATH="vendor/package"

$bundle_cmd install
read INPUT
echo $INPUT | $bundle_cmd exec $BOSH_PACKAGES_DIR/meta_cpi/bin/meta_cpi

exit 0
